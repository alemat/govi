<div id="userlist-content">
  <% if followers.any? %>
    <ul class="follow-modal-list">
      <% followers.each do |follower| %>
        <li class="follow-modal-item">
          <%= link_to employee_path(follower), data: { modal_close: "1" }, class: "follow-modal-link" do %>
            <div class="follow-media">
              <span class="media-object pull-left has-online-status img-size-large">
                <%= user_avatar(follower, width: 50, height: 50) %>
                <%= online_status_tag(follower) %>
              </span>
              <div class="follow-media-body">
                <h4 class="follow-media-heading"><%= follower.full_name.titleize %></h4>
                <h5><%= follower.first_name %></h5>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
    
    <% if followers.total_pages > 1 %>
      <div class="pagination-container">
        <%= paginate followers, remote: true %>
      </div>
    <% end %>
  <% else %>
    <div class="empty-state-message">
      No followers yet
    </div>
  <% end %>
</div>
