<%= turbo_frame_tag dom_id(post) do %>
  <div class="card mb-3" id="<%= dom_id(post) %>">
    <div class="card-header d-flex justify-content-between align-items-center">
      <span><strong><%= post.title %></strong> 
        
      </span>

      <div class="post-actions">
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-outline-primary", data: { turbo_frame: dom_id(post) } %>
        <%= link_to "Delete", post_path(post), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                    class: "btn btn-sm btn-outline-danger" %>
      </div>
    </div>

    <div class="card-body">
      <p class="card-text"><%= post.body %></p>

      

      <!-- Placeholder for likes, comments, shares -->
      <div class="d-flex gap-2 mt-2">
        <button class="btn btn-sm btn-outline-success">Like</button>
        <button class="btn btn-sm btn-outline-secondary">Comment</button>
        <button class="btn btn-sm btn-outline-info">Share</button>
      </div>
    </div>
  </div>
<% end %>
