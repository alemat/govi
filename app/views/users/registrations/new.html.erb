<h1 class="login-message__title">Create Account</h1>

<div class="login-form form-default js-login-form">
  <%= simple_form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <!-- Display error messages -->
    <%= render "users/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="form-row">
      <%= f.email_field :email, 
            required: true, 
            label: '', 
            autofocus: true, 
            input_html: { autocomplete: "email" }, 
            placeholder: "E-mail" %>
    </div>

    <!-- Password Field -->
    <div class="form-row">
      <%= f.password_field :password, 
            required: true, 
            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), 
            input_html: { autocomplete: "new-password" }, 
            placeholder: "Password" %>
    </div>

    <!-- Password Confirmation -->
    <div class="form-row">
      <%= f.password_field :password_confirmation, 
            required: true, 
            input_html: { autocomplete: "new-password" }, 
            placeholder: "Confirm Password" %>
    </div>


    <!-- Submit Button -->
    <div class="form-row">
      <%= f.button :submit, "Sign Up", class: "btn btn-rounded btn-primary btn-block" %>
    </div>

  <% end %>
</div>

<%= render "users/shared/links" %>
