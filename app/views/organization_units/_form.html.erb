
<%= simple_form_for(@organization_unit) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :custom_name %>
    <%= f.input :short_name %>
    <%= f.input :code %>
    <%= f.input :ownership %>
    <%= f.input :url %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :description %>
    <%= f.input :visitable %>
    <%= f.association :organization_type %>
    <%= f.association :parent_organization_unit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
