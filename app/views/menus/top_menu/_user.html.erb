<% if current_user %>
  <!-- Theme Toggle -->
<li class="nav-item" data-controller="theme">
  <button
    type="button"
    class="btn btn-circle btn-default"
    data-action="theme#toggle"
    aria-label="Toggle theme"
  >
    <span data-theme-target="icon">
      <span class="icon-light"><%= tabler_icon "sun", size: "18px" %></span>
      <span class="icon-dark"><%= tabler_icon "moon", size: "18px" %></span>
    </span>
  </button>
</li>
<li class="nav-item" data-controller="theme">
  <button
    type="button"
    class="btn btn-circle btn-default"
    data-action="theme#toggle"
    aria-label="Toggle theme"
  >
    <span data-theme-target="icon">
      <span class="icon-light"><%= tabler_icon "sun", size: "18px" %></span>
      <span class="icon-dark"><%= tabler_icon "moon", size: "18px" %></span>
    </span>
  </button>
</li>

  <!-- Notifications / Mail -->
  <% if current_user.member? %>
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
        <button type="button" class="btn btn-circle btn-default">
          <%= tabler_icon "bell", size: "16px" %>
        </button>
      <% end %>
    </li>
  <% else %>
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
        <button type="button" class="btn btn-circle btn-default">
          <%= tabler_icon "mail", size: "16px" %>
        </button>
      <% end %>
    </li>

    <li class="nav-item">
      <%= link_to root_path, class: "nav-link" do %>
        <button type="button" class="btn btn-circle btn-default">
          <%= tabler_icon "bell", size: "16px" %>
        </button>
      <% end %>
    </li>
  <% end %>

<li class="nav-item dropdown user-menu" data-controller="dropdown">
  <a href="#" class="nav-link dropdown-toggle" data-action="click->dropdown#toggle">
    <%= user_avatar(current_user, width: 35, height: 35) %>
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu dropdown-menu-right" data-dropdown-target="menu">
    <li>
      <%= link_to edit_user_registration_path, class: "dropdown-link" do %>
        <%= tabler_icon "lock", size: "16px" %> Change Password
      <% end %>
    </li>
    <li class="divider"></li>
    <li>
      <%= link_to destroy_user_session_path,
            class: "dropdown-link text-danger",
            data: { turbo_method: :delete, turbo: "true" } do %>
        <%= tabler_icon "logout", size: "16px" %> Log Out
      <% end %>
    </li>
  </ul>
</li>

<% end %>
